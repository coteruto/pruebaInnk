<div class="container">
	<div class="row">
		<div class="col-md-2">
			<h2>Usuarios</h2>
		</div>
		<div class="col-md-10 new-link-position">
			<%= link_to "Nuevo", new_user_path %>
		</div>
	</div>
	<div class="sub-container">
		<% @users.each do |user| %>
			<div class="card card-sm">
				<div class="card-header bg-primary">
					<%= link_to user.name + " (" + (user.email) + ")", user, class: "card-header-link-text" %>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-md-12">
							<div class="row">
								<div class="col-md-8">
									<b>Películas en arriendo:</b>
								</div>
								<div class="col-md-4">
									<%= user.movies.count %>
								</div>
							</div>
							<div class="row">
								<div class="col-md-8">
									<b>Series en arriendo:</b>
								</div>
								<div class="col-md-4">
									<%= user.series.count %>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-auto mr-auto"></div>
						<div class="col-auto">
							<%= link_to "Asignar múltiples", edit_multi_movie_path(user) %>
						</div>
						<div class="col-auto">
							<%= link_to "Eliminar", user, method: :delete,
								data: { confirm: "¿Está seguro que desea eliminar este usuario" } %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>