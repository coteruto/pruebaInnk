<script >
	$(document).ready( function(){
		$( "#movies-dropdown" ).select2({
		    theme: "bootstrap",
		    multiple: true,
		    placeholder: "Seleccione una película...",
		    width: "100%",
		    tags: true
		});
	});
</script>
<div class="container">
	<div class="card card-sm">
		<div class="card-header bg-primary">
			Arrendar múltiples productos
		</div>
		<div class="card-body">
			<%= form_for @user, url: associate_movies_path(@user) do |f| %>
				<div class="form-group">
					<label>Selecionar películas</label>
					<%= select_tag :movie, options_from_collection_for_select(@movies, :id, :title),
						multiple: true, include_blank: true, prompt: "seleccione una película...",
						id: "movies-dropdown", class: "custom-select no-display" %>
					<div class="btn-container">
						<%= f.submit "Guardar", class: "btn btn-primary" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>